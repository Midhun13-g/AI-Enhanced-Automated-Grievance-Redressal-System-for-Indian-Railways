# PostgreSQL Database Configuration (for Render)
# Get these values from your Render PostgreSQL database dashboard

# Internal Database URL from Render (format: jdbc:postgresql://host:port/database)
DB_URL=jdbc:postgresql://dpg-xxxxx.oregon-postgres.render.com:5432/railway_v3pl

# Database username
DB_USERNAME=railway_v3pl_user

# Database password
DB_PASSWORD=your_password_here

# Optional: Kafka configuration if using local Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
